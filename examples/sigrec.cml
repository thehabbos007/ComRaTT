chan keyboard : int;

toggle_case : int -> int
def toggle_case c =
    if c >= 65
    then if c <= 90
         then c + 32
         else if c >= 97
              then if c <= 122
                   then c - 32
                   else c
              else c
    else if c >= 97
         then if c <= 122
              then c - 32
              else c
         else c
;

kb : O Sig int
def kb =
    let kb_v = wait keyboard in
    delay {cl(kb_v)} (
        let recv = advance kb_v in
        toggle_case recv :: kb
    )
;

