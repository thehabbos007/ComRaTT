chan apple;

first : int -> () -> int
def first x =
	let del_first = delay {apple} x in
	delay {apple} (advance del_first);

second : int -> () -> int
def second x =
	// this fails type checking if trying to subtract from x instead of adding...
	let del_second = delay {apple} (x+2) in
	delay {apple} (advance del_second);

print <- first 42;
print <- second 40;
